section.InformUs
        h4.InformUs_title(data-aos="zoom-in-up" data-aos-delay="400" data-aos-duration="1000")
            | Stay with us
        p.InformUs_description(data-aos="zoom-in-up" data-aos-delay="500" data-aos-duration="1000")
            | We ensure quality & support
        form(action="").InformUs_form.form_container.form
            input.form_input.form_inputName(data-aos="zoom-in-up"
            data-aos-delay="900" data-aos-duration="1000")(type='text', placeholder='Full Name')
            input.form_input.form_inputEmail(data-aos="zoom-in-up"
            data-aos-delay="1100" data-aos-duration="1000")(type='email', placeholder='Email Address')
            textarea.form_input.form_inputMessage(data-aos="zoom-in-up"
            data-aos-delay="1300" data-aos-duration="1000")(name="message", placeholder='Message')
            div.form_BottomArea
                p.form_subscribe.subscribe(data-aos="fade-up-right" data-aos-delay="1300" data-aos-duration="1000")
                    input.form_inputCheckbox(type='checkbox', id='subscribe')
                    label(for='subscribe').subscribe__Text Subscribe Newsletter
                button.btn.form_btn(data-aos="fade-up-left" data-aos-delay="1300" data-aos-duration="1000")
                    a.btn_link.form_btn_link Send

