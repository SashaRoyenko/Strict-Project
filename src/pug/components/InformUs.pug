section.InformUs_s
    .InformUs_s__wrap.InformUs_container
        h4.InformUs_title(data-aos="zoom-in-up" data-aos-delay="400" data-aos-duration="1000")
            | Stay with us
        p.InformUs_description(data-aos="zoom-in-up" data-aos-delay="500" data-aos-duration="1000")
            | We ensure quailty & support
        form.InformUs_form
            input.InformUs_input.InformUs_inputName(data-aos="zoom-in-up"
            data-aos-delay="900" data-aos-duration="1000")(type='name', placeholder='Full Name')
            input.InformUs_input.InformUs_inputEmail(data-aos="zoom-in-up"
            data-aos-delay="1100" data-aos-duration="1000")(type='email', placeholder='Email Address')
            textarea.InformUs_input.InformUs_inputMessage(data-aos="zoom-in-up"
            data-aos-delay="1300" data-aos-duration="1000")(name="message", placeholder='Message')
            div.InformUs_formBottomArea
                p.InformUs_subscribe(data-aos="fade-up-right" data-aos-delay="1350" data-aos-duration="1000")
                    input.InformUs_inputCheckbox(type='checkbox', id='subscribe')
                    label(for='subscribe').InformUs_subscribeText Subscribe Newsletter
                button.btn.InformUs_btn(data-aos="fade-up-left" data-aos-delay="1350" data-aos-duration="1000")
                    a.btn_link.InformUs_btn_link Send

